<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>
</head>


<body cz-shortcut-listen="true">
<% include ../partials/nav.ejs %>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron" style="background-color: #d42031">
    <div class="container">
        <h1 class="display-3">RROOOAAR!</h1>
        <h3>Submit your Link!</h3>
        <form>
            <label for="url">Your URL</label>
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon3">https://deineurl.com/tool/</span>
                <input type="text" class="form-control" id="url" aria-describedby="basic-addon3" pattern="https?://.+"
                       required>
            </div>
            <br>
            <label class="sr-only" for="title">Title</label>
            <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="title" placeholder="Title"><br>
            <label class="sr-only" for="desc">Description</label>
            <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="desc" placeholder="Description"><br>
            <label class="sr-only" for="tags">Tags</label>
            <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="tags" placeholder="Tags"><br>

            <input class="btn btn-primary btn-lg" type="submit" id="submit" value="Submit" style="background-color: #000;color:#fff;border-color: #fff">
        </form>
    </div>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class="row">

        <% links.forEach(function(item) { %>
        <div class="col-md-4">
            <h2><%= item.title %></h2>
            <p class="small"><%= item.created_at %></p>
            <img class="img-fluid img-thumbnail" src="<%= item.img %>">
            <p><%= item.desc %></p>
            <p><%= item.tags %></p>
            <p><a class="btn btn-secondary" href="<%= item.url %>" role="button">View details »</a></p>
        </div>
        <% }); %>
    </div>

    <hr>

    <footer>
        <p>© Company 2017</p>
    </footer>
</div> <!-- /container -->

</body>

</html>
