<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>
</head>


<body cz-shortcut-listen="true">
<% include ../partials/nav.ejs %>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="header" >
    <div class="container">
        <h1 class="">RROOOAAR!</h1>
        <h3>Submit your Link!</h3>
        <form>
            <label for="url">Your URL</label>
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon3">https://deineurl.com/tool/</span>
                <input type="text" class="form-control" id="url" aria-describedby="basic-addon3" pattern="https?://.+"
                       required>

            </div><br>
            <div class="input-group">
                <label class="sr-only" for="tags">Tags</label>
                <datalist id="taglist">
                    <% tags.forEach(function(tag) { %>
                    <option value="<%= tag.name %>">
                        <% }); %>
                </datalist>
                <input type="text" name="tags"  id="tags" required>
                <input class="btn btn-primary btn-lg" type="submit" id="submit" value="save!" style="background-color: #000;color:#fff;border-color: #fff">
            </div>
            <br>
            <label class="sr-only" for="title">Title</label>
            <h2 contenteditable="true" id="inputTitle">--- submit URL ---</h2>
            <label class="sr-only" for="desc">Description</label>
            <p  contenteditable="true" id="inputDesc" class="">--- submit URL ---</p>


        </form>
    </div>
</div>


<div class="container">
    <!-- Example row of columns -->
    <div class="row">

        <% links.forEach(function(item) { %>
        <div class="col-md-4">
            <h2><%= item.title %></h2>
            <p class="small"><%= item.created_at %></p>
            <img class="img-fluid img-thumbnail" src="<%= item.img %>">
            <p><%= item.desc %></p>
            <p><%= item.tags %></p>
            <p><a class="btn btn-secondary" href="<%= item.url %>" role="button">View details »</a></p>
        </div>
        <% }); %>
    </div>

    <hr>

    <footer>
        <p>© Company 2017</p>
    </footer>
</div> <!-- /container -->

</body>

</html>
